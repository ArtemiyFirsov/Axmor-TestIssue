<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-lg-offset-3 col-md-offset-3">
        <table class="table table-responsive table-hover table-bordered">
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <h4>@item.Title</h4>
                        <p>@item.Text</p>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

